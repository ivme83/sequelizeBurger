<div class="container">
  <div class="menu-grid">
    <div class="menu-top">
      <h1>Eat Da Burger!</h1>
      <br>
    </div>
    <div class="menu-btm-left">
      <img class="swirl" src="../assets/img/swirls9.png">
      <h1>On Menu</h1>

      <ul>
        {{#each burgers}}
          {{#if onMenu}}
            {{> burgers/burger-block onMenu=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="menu-btm-right">
      <img class="swirl" src="../assets/img/swirls9.png">
      <h1>Ordered</h1>

      <ul>
        {{#each burgers}}
          {{#unless onMenu}}
            {{> burgers/burger-block onMenu=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="menu-left">
      <img class="swirl" src="../assets/img/swirls9.png">
      <h1>Add a Burger</h1>
      <br>
      <form class="create-form">

        <div class="form-group">
          <div class="input-holder">
          <label for="burg">Burger Name: </label>
          <input type="text" id="burg" name="name"><img class="txtFrm" src="assets/img/frm.png"></div>
        </div>

        <div class="form-group">
          <label for="onMenu">Eaten?</label><br>
          <input type="radio" name="onMenu" value="1" checked> On Menu!<br>
          <input type="radio" name="onMenu" value="0"> Add to Order
        </div>

        <button class="myBtn" type="submit"><img class="imgBtn" src="assets/img/rbn-btn.png"><span>Add</span></button>
      </form>      
    </div>

    <div class="menu-right">
      <img src="../assets/img/burger.png">
    </div>
  </div>
</div>